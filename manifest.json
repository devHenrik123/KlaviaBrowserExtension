{
    "name": "KlavalExtension",
    "description": "Introduces a variety of qol improvements, tools and fun stuff for your Klavia experience.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://klavia.io/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "logo.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}