{
    "name": "MPEK - Multi Purpose Extension for Klavia",
    "description": "Introduces a variety of qol improvements, tools and fun stuff for your Klavia experience.",
    "version": "1.1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://klavia.io/*",
        "*://playklavia.com/*",
        "*://ntcomps.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "logo.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "tools/*.js",
                "util/*.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}